<Window x:Class="Revit.Views.ImportStructuralModelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Revit.ViewModels"
        xmlns:shared="clr-namespace:WPF.Shared.Controls;assembly=WPF.Shared"
        Title="Import Structural Model" Height="700" Width="800"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/WPF.Shared;component/Styles/CommonStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Only converters specific to this window -->
            <BooleanToVisibilityConverter x:Key="BoolToVis"/>
            <vm:InverseBooleanConverter x:Key="InverseBoolConverter"/>
            <vm:BoolToOpacityConverter x:Key="BoolToOpacity"/>
        </ResourceDictionary>
    </Window.Resources>

    <shared:IMEGWindowLayout WindowTitle="Import Structural Model"
                            PrimaryButtonText="Import"
                            PrimaryCommand="{Binding ImportCommand}"
                            CancelCommand="{Binding CancelCommand}">

        <shared:IMEGWindowLayout.MainContent>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Import Options & Input File -->
                    <RowDefinition Height="Auto"/>
                    <!-- Model Transformation -->
                    <RowDefinition Height="Auto"/>
                    <!-- Elements to Import -->
                </Grid.RowDefinitions>

                <!-- Import Options & Input File -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left Column: Import Format and Input File -->
                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <!-- Import Format -->
                        <GroupBox Header="Import Format" Margin="0,0,0,15">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="10">
                                <RadioButton Content="ETABS" IsChecked="{Binding ImportFromETABS}" 
                                           GroupName="ImportFormat" Margin="0,0,15,0"/>
                                <RadioButton Content="RAM SS" IsChecked="{Binding ImportFromRAM}" 
                                           GroupName="ImportFormat" Margin="0,0,15,0"/>
                                <RadioButton Content="JSON" IsChecked="{Binding ImportFromJSON}" 
                                           GroupName="ImportFormat"/>
                            </StackPanel>
                        </GroupBox>

                        <!-- Input File -->
                        <GroupBox Header="Input File">
                            <Grid Margin="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBox Grid.Row="0" Grid.Column="0" Text="{Binding InputFilePath}" 
                                        Margin="0,0,10,10" Height="30" VerticalContentAlignment="Center"/>
                                <Button Grid.Row="0" Grid.Column="1" Content="Browse" 
                                       Command="{Binding BrowseInputFileCommand}" 
                                       Style="{StaticResource SecondaryButton}"
                                       Width="75" Height="30" Margin="0,0,0,10"/>
                                <CheckBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" 
                                         Content="Validate geometry on import" 
                                         IsChecked="{Binding ValidateGeometry}"/>
                            </Grid>
                        </GroupBox>
                    </StackPanel>

                    <!-- Right Column: Import Options -->
                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                        <GroupBox Header="Import Options">
                            <StackPanel Margin="10">
                                <CheckBox Content="Import materials" IsChecked="{Binding ImportMaterials}" Margin="0,0,0,10"/>
                                <CheckBox Content="Import section properties" IsChecked="{Binding ImportSectionProperties}" Margin="0,0,0,10"/>
                                <CheckBox Content="Import loads" IsChecked="{Binding ImportLoads}" Margin="0,0,0,10"/>
                                <CheckBox Content="Merge with existing model" IsChecked="{Binding MergeWithExisting}"/>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </Grid>

                <!-- Model Transformation (full width) -->
                <GroupBox Grid.Row="1" Header="Model Transformation" Margin="0,15,0,0">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Row 1: Translation -->
                        <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,10">
                            <TextBlock Text="Translation (X, Y, Z):" Margin="0,0,0,5"/>
                            <StackPanel Orientation="Horizontal">
                                <TextBox Text="{Binding TranslationX}" Width="60" Margin="0,0,5,0"/>
                                <TextBox Text="{Binding TranslationY}" Width="60" Margin="0,0,5,0"/>
                                <TextBox Text="{Binding TranslationZ}" Width="60"/>
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,10,10">
                            <TextBlock Text="Rotation (degrees):" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding RotationAngle}" Width="80"/>
                        </StackPanel>

                        <StackPanel Grid.Row="0" Grid.Column="2" Margin="0,0,0,10">
                            <TextBlock Text="Scale Factor:" Margin="0,0,0,5"/>
                            <TextBox Text="{Binding ScaleFactor}" Width="80"/>
                        </StackPanel>

                        <!-- Row 2: Target Level -->
                        <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
                            <TextBlock Text="Target Base Level:" Margin="0,0,0,5"/>
                            <ComboBox ItemsSource="{Binding LevelCollection}" 
                                     SelectedItem="{Binding SelectedTargetLevel}" 
                                     DisplayMemberPath="Name" Width="200" HorizontalAlignment="Left"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Grid.Column="2" VerticalAlignment="Bottom">
                            <Button Content="Reset Transform" 
                                   Command="{Binding ResetTransformCommand}"
                                   Style="{StaticResource SecondaryButton}"
                                   Width="120" Height="30"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <!-- Elements to Import -->
                <GroupBox Grid.Row="2" Header="Elements to Import" Margin="0,15,0,0">
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <CheckBox Content="Beams" IsChecked="{Binding ImportBeams}" Margin="0,0,20,0"/>
                        <CheckBox Content="Columns" IsChecked="{Binding ImportColumns}" Margin="0,0,20,0"/>
                        <CheckBox Content="Braces" IsChecked="{Binding ImportBraces}" Margin="0,0,20,0"/>
                        <CheckBox Content="Walls" IsChecked="{Binding ImportWalls}" Margin="0,0,20,0"/>
                        <CheckBox Content="Floors" IsChecked="{Binding ImportFloors}" Margin="0,0,20,0"/>
                        <CheckBox Content="Footings" IsChecked="{Binding ImportFootings}"/>
                    </StackPanel>
                </GroupBox>
            </Grid>
        </shared:IMEGWindowLayout.MainContent>
    </shared:IMEGWindowLayout>
</Window>