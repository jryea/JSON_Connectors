<Window x:Class="StandaloneConverter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Structural Model Converter"
        Style="{StaticResource IMEGWindowStyle}"
        Height="600" Width="800"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Conversion Type -->
            <RowDefinition Height="Auto"/>
            <!-- Input/Output Files -->
            <RowDefinition Height="Auto"/>
            <!-- Options -->
            <RowDefinition Height="*"/>
            <!-- Log Output -->
        </Grid.RowDefinitions>

        <!-- Conversion Type -->
        <GroupBox Grid.Row="0" Header="Conversion Type" Margin="0,0,0,15">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="From:" Margin="0,0,0,5" FontWeight="SemiBold"/>
                    <StackPanel Orientation="Horizontal">
                        <RadioButton Content="ETABS" IsChecked="{Binding ConvertFromETABS}" 
                                   GroupName="FromFormat" Margin="0,0,15,0"/>
                        <RadioButton Content="RAM" IsChecked="{Binding ConvertFromRAM}" 
                                   GroupName="FromFormat" Margin="0,0,15,0"/>
                        <RadioButton Content="JSON" IsChecked="{Binding ConvertFromJSON}" 
                                   GroupName="FromFormat"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="1">
                    <TextBlock Text="To:" Margin="0,0,0,5" FontWeight="SemiBold"/>
                    <StackPanel Orientation="Horizontal">
                        <RadioButton Content="ETABS" IsChecked="{Binding ConvertToETABS}" 
                                   GroupName="ToFormat" Margin="0,0,15,0"/>
                        <RadioButton Content="RAM" IsChecked="{Binding ConvertToRAM}" 
                                   GroupName="ToFormat" Margin="0,0,15,0"/>
                        <RadioButton Content="JSON" IsChecked="{Binding ConvertToJSON}" 
                                   GroupName="ToFormat"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Input/Output Files -->
        <Grid Grid.Row="1" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Input File -->
            <GroupBox Grid.Column="0" Header="Input File" Margin="0,0,10,0">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Text="{Binding InputFilePath}" Grid.Column="0" Margin="0,0,10,0" 
                            Height="30" VerticalContentAlignment="Center"/>
                    <Button Content="Browse..." Command="{Binding BrowseInputCommand}" 
                            Style="{StaticResource SecondaryButton}" Grid.Column="1" 
                            Width="80" Height="30"/>
                </Grid>
            </GroupBox>

            <!-- Output File -->
            <GroupBox Grid.Column="1" Header="Output File" Margin="10,0,0,0">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Text="{Binding OutputFilePath}" Grid.Column="0" Margin="0,0,10,0"
                            Height="30" VerticalContentAlignment="Center"/>
                    <Button Content="Browse..." Command="{Binding BrowseOutputCommand}" 
                            Style="{StaticResource SecondaryButton}" Grid.Column="1" 
                            Width="80" Height="30"/>
                </Grid>
            </GroupBox>
        </Grid>

        <!-- Options -->
        <GroupBox Grid.Row="2" Header="Options" Margin="0,0,0,15">
            <StackPanel Orientation="Horizontal" Margin="10">
                <CheckBox Content="Include materials" IsChecked="{Binding IncludeMaterials}" Margin="0,0,20,0"/>
                <CheckBox Content="Include loads" IsChecked="{Binding IncludeLoads}" Margin="0,0,20,0"/>
                <CheckBox Content="Validate geometry" IsChecked="{Binding ValidateGeometry}" Margin="0,0,20,0"/>
                <CheckBox Content="Show progress details" IsChecked="{Binding ShowProgressDetails}"/>
            </StackPanel>
        </GroupBox>

        <!-- Log Output -->
        <GroupBox Grid.Row="3" Header="Conversion Log">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="10">
                <TextBox Text="{Binding LogOutput, Mode=OneWay}" 
                        IsReadOnly="True" 
                        FontFamily="Consolas" 
                        FontSize="10"
                        Background="Transparent"
                        BorderThickness="0"
                        TextWrapping="Wrap"
                        AcceptsReturn="True"/>
            </ScrollViewer>
        </GroupBox>
    </Grid>
</Window>